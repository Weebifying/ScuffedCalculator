<CalcWidget>:
    MDBoxLayout:
        orientation:'vertical'
        size: root.width, root.height
        md_bg_color: (36/255, 36/255, 36/255, 1)

        MDLabel:
            id: calcText
            text: "0"
            color: 1,1,1,1
            halign: "right"
            valign: "bottom"
            font_size: 40
            size_hint: 0.925, 0.2
            pos_hint: {"center_x": 0.5, "top": 1}

        MDFloatLayout:
            size_hint: 1,0.8

            MDRaisedButtonFixed:
                font_size: 20
                md_bg_color: (22/255, 22/255, 22/255, 0.9)
                id: buttonPlaceholder
                text:'√x'
                size_hint: 0.245, 0.19
                pos_hint: {"center_x": 0.125, "center_y": 0.9}
                on_release: root.squareRoot()
    
            MDRaisedButtonFixed:
                font_size: 20
                md_bg_color: (22/255, 22/255, 22/255, 0.9)
                id: buttonC
                text:'C'
                size_hint: 0.245, 0.19
                pos_hint: {"center_x": 0.375, "center_y": 0.9}
                on_release: root.clearAll()
    
            MDRaisedButtonFixed:
                font_size: 20
                md_bg_color: (22/255, 22/255, 22/255, 0.9)
                id: buttonDel
                text:'DEL'
                size_hint: 0.245, 0.19
                pos_hint: {"center_x": 0.625, "center_y": 0.9}
                on_release: root.delete()
    
            MDRaisedButtonFixed:
                font_size: 35
                md_bg_color: (22/255, 22/255, 22/255, 0.9)
                id: buttonDivide
                text:'÷'
                size_hint: 0.245, 0.19
                pos_hint: {"center_x": 0.875, "center_y": 0.9}
                on_release: root.changeSign("/")
    
            MDRaisedButtonFixed:
                font_size: 20
                md_bg_color: (7.5/255, 7.5/255, 7.5/255, 0.9)
                id: button7
                text:'7'
                size_hint: 0.245, 0.19
                pos_hint: {"center_x": 0.125, "center_y": 0.7}
                on_release: root.addNumber(7)
    
            MDRaisedButtonFixed:
                font_size: 20
                md_bg_color: (7.5/255, 7.5/255, 7.5/255, 0.9)
                id: button8
                text:'8'
                size_hint: 0.245, 0.19
                pos_hint: {"center_x": 0.375, "center_y": 0.7}
                on_release: root.addNumber(8)
    
            MDRaisedButtonFixed:
                font_size: 20
                md_bg_color: (7.5/255, 7.5/255, 7.5/255, 0.9)
                id: button9
                text:'9'
                size_hint: 0.245, 0.19
                pos_hint: {"center_x": 0.625, "center_y": 0.7}
                on_release: root.addNumber(9)
    
            MDRaisedButtonFixed:
                font_size: 35
                md_bg_color: (22/255, 22/255, 22/255, 0.9)
                id: buttonMultiply
                text:'×'
                size_hint: 0.245, 0.19
                pos_hint: {"center_x": 0.875, "center_y": 0.7}
                on_release: root.changeSign("*")
    
            MDRaisedButtonFixed:
                font_size: 20
                md_bg_color: (7.5/255, 7.5/255, 7.5/255, 0.9)
                id: button4
                text:'4'
                size_hint: 0.245, 0.19
                pos_hint: {"center_x": 0.125, "center_y": 0.5}
